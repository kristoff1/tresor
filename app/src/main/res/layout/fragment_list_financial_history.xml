<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/suggested_hash_tag_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_vs"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_marginStart="@dimen/margin_vs"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_financial_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_vs"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>